{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/todogroup/repolinter/master/rules/file-not-hash-config.json",
  "type": "object",
  "properties": {
    "globsAll": {
      "type": "array",
      "items": { "type": "string" }
    },
    "nocase": {
      "type": "boolean",
      "default": false
    },
    "algorithm": {
      "type": "string",
      "default": "sha256"
    },
    "hashes": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "required": ["hashes"],
  "oneOf": [{ "required": ["globsAny"] }, { "required": ["files"] }]
}
