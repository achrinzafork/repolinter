{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/todogroup/repolinter/master/rules/large-file-config.json",
  "type": "object",
  "properties": {
    "globsAll": {
      "type": "array",
      "items": { "type": "number" }
    },
    "size": {"type": "number"}
  },
  "required": ["content"],
  "oneOf": [{ "required": ["globsAll"] }, { "required": ["files"] }]
}
